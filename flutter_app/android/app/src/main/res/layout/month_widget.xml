        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="मं" android:textColor="#AAAAAA" android:textSize="10sp" android:gravity="center" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="बु" android:textColor="#AAAAAA" android:textSize="10sp" android:gravity="center" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="बि" android:textColor="#AAAAAA" android:textSize="10sp" android:gravity="center" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="शु" android:textColor="#AAAAAA" android:textSize="10sp" android:gravity="center" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="श" android:textColor="#FF6B6B" android:textSize="10sp" android:gravity="center" />
    </LinearLayout>

